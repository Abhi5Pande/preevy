{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "syncpack": "^9.8.4",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "lodash": "^4.17.21"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  },
  "scripts": {
    "lint": "yarn workspaces run lint",
    "check-mismatches": "syncpack list-mismatches",
    "fix-mismatches": "syncpack fix-mismatches",
    "prepare": "husky install"
  }
}
